  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bahmi/proshop/issues"
  },
  "homepage": "https://github.com/bahmi/proshop#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "mongoose": "^5.10.13"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6"
  }
}
